<div id="<%= dom_id(post) %>" class="card mb-4 shadow-sm p-3 border rounded bg-body-tertiary">

  <div class="card-body">

    <h2 class="card-title text-primary">
      <strong>Title:</strong> <%= post.title %>
    </h2>

    <small class="text-muted d-block mb-2">
      <%= post_meta post %>
    </small>

    <h4 class="card-subtitle mb-2 text-secondary">
      <strong>Summary:</strong> <%= post.summary %>
    </h4>

    <p class="card-text">
      <strong>Body:</strong><br>
      <%= simple_format post.body %>
    </p>

    <p class="card-text">
      <strong>Active:</strong> <%= post.active ? "Yes" : "No" %>
    </p>

    <p class="card-text">
      <strong>Updated at:</strong> <%= post.updated_at.strftime("%B %d, %Y") %>
    </p>

    <div class="d-flex justify-content-between mt-3">
      <%= link_to "Edit", edit_post_path(post), class: "btn btn-sm btn-outline-primary" %>
      <%= link_to "Back", posts_path, class: "btn btn-sm btn-outline-secondary" %>
      <%= button_to "Delete", post, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
    </div>

  </div>
</div>
