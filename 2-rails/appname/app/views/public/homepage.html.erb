<% page_title "Home" %>

<div class="container mt-4">
  <div class="row">

    <div class="col-md-8">
      <h2>Posts</h2>

      <% if @posts.any? %>
        <% @posts.each do |post| %>
          <div class="post mb-3">
            <%= render partial: "posts/post", locals: { post: post } %>
          </div>
        <% end %>
      <% else %>
        <p>No posts available yet. Check back soon!</p>
      <% end %>
    </div>

    <div class="col-md-4">
      <p class="h2">Extra Info</p>
      <h3>The total Posts: <%= Post.total %></h3>
    </div>

  </div>
</div>
